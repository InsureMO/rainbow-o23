{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"deleteOutDir": true,
		"assets": [
			{
				"include": "**/*.yaml",
				"outDir": "./dist",
				"watchAssets": true
			},
			{
				"include": "**/*.json",
				"outDir": "./dist",
				"watchAssets": true
			},
			{
				"include": "**/*.html",
				"outDir": "./dist",
				"watchAssets": true
			},
			{
				"include": "**/*.xlsx",
				"outDir": "./dist",
				"watchAssets": true
			},
			{
				"include": "**/*.xls",
				"outDir": "./dist",
				"watchAssets": true
			},
			{
				"include": "**/*.csv",
				"outDir": "./dist",
				"watchAssets": true
			}
		]
	}
}
