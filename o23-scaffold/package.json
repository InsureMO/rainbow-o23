{
	"name": "@rainbow-o23/scaffold",
	"version": "0.1.1",
	"description": "o23 scaffold",
	"scripts": {
		"build": "nest build",
		"build:standalone": "nest build --webpack",
		"format": "prettier --write \"src/**/*.ts\"",
		"start": "nest start",
		"dev:start": "nest start --watch",
		"debug:start": "nest start --debug --watch",
		"prod:start": "node dist/main",
		"prod:build:start": "yarn build:standalone && yarn prod:start",
		"lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
		"test": "jest"
	},
	"author": "Rainbow Team",
	"license": "UNLICENSED",
	"dependencies": {
		"@rainbow-o23/n2": "0.1.1",
		"@rainbow-o23/n3": "0.1.1",
		"better-sqlite3": "^9.0.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^9.0.0",
		"@nestjs/schematics": "^9.0.0",
		"@nestjs/testing": "^9.0.0",
		"@theinternetfolks/snowflake": "^1.3.0",
		"@types/better-sqlite3": "^7.6.6",
		"@types/express": "^4.17.13",
		"@types/jest": "29.5.1",
		"@types/js-yaml": "^4.0.5",
		"@types/multer": "^1.4.7",
		"@types/node": "18.16.12",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"clean-webpack-plugin": "^4.0.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"fork-ts-checker-webpack-plugin": "^8.0.0",
		"jest": "29.5.0",
		"mysql2": "^3.6.2",
		"prettier": "^2.3.2",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "29.1.0",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "4.2.0",
		"typeorm": "^0.3.17",
		"typescript": "5.1.6",
		"webpack": "^5.87.0",
		"yargs": "^17.7.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "./",
		"testRegex": "(/test/.*\\.(test|spec))\\.[tj]sx?$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"volta": {
		"node": "18.19.0",
		"yarn": "1.22.21"
	}
}